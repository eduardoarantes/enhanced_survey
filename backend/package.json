{
  "name": "survey-backend",
  "version": "1.0.0",
  "description": "Backend service for Enhanced Survey Tool with LLM proxy and throttling",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "coverage": "npm run test:coverage"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "node-fetch": "^2.7.0",
    "openai": "^4.20.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^30.1.1",
    "nodemon": "^3.0.2",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!test-throttling.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "nyc": {
    "include": [
      "server.js"
    ],
    "exclude": [
      "**/__tests__/**",
      "**/*.test.js",
      "**/*.spec.js",
      "node_modules/**",
      "coverage/**",
      "test-throttling.js"
    ]
  }
}
